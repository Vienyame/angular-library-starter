{
    "compilerOptions": {
        "baseUrl": "",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "mapRoot": "",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist/commonjs",
        "rootDir": "./src",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"],
        "types": [
            "node",
            "mocha",
            "chai"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "node_modules",
        "dist",
        "**/*.ngfactory.ts",
        "**/*.shim.ts"
    ]
}